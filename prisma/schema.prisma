// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int      @id @default(autoincrement())
  nome            String
  apelido         String
  email           String   @unique
  senha           String
  telefone        String
  foto_de_perfil  String?
  cidade          String
  data_nascimento DateTime
  insegurancas    String
  autoestima      String
  confianca       String
  medos           String
  avaliacao       String
  mudancas        String

  Chat Chat[]
}

model Chat {
  id              Int           @id @default(autoincrement())
  mensagem        String
  data            DateTime
  usuarioId       Int
  usuario         Usuario       @relation(fields: [usuarioId], references: [id])
  profissionaisId Int
  profissionais   Profissionais @relation(fields: [profissionaisId], references: [id])
  mensagens       Mensagem[] // 
}

model Mensagem {
  id       Int    @id @default(autoincrement())
  data     String
  mensagem String
  chatId   Int
  horario  String
  chat     Chat?  @relation(fields: [chatId], references: [id])
}

model Profissionais {
  id      Int    @id @default(autoincrement())
  nome    String
  contato String
  Chat    Chat[]
}
